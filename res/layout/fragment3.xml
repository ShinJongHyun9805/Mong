<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="#EBF5F8F6"
    android:orientation="vertical"
    android:weightSum="2">

    <RelativeLayout
        android:id="@+id/VideoLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">


        <com.google.android.exoplayer2.ui.PlayerView
            android:backgroundTint="@color/color"
            android:id="@+id/Videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/profileCard"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userProfileImage"
                        android:layout_width="26dp"
                        android:layout_height="match_parent"></de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:id="@+id/Tx_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/ibmplexsanskrsemibold"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:lineSpacingExtra ="0dp"
                        android:lineSpacingMultiplier="1"
                        android:letterSpacing="0"
                        android:textScaleX="1"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="8dp"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
            </LinearLayout>

            <TextView
                android:id="@+id/todogText"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:text="화면을 두번 '토독' 눌러주세요"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/f3_avi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:indicatorColor="#000000"
                app:indicatorName="BallSpinFadeLoaderIndicator" />

            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:visibility="gone"
                    android:id="@+id/Lottie"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:lottie_fileName="lf30_editor_yjixlnlv.json" />
            </LinearLayout>

            <TextView
                android:id="@+id/videoLike"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:gravity="bottom|center"
                android:letterSpacing="0"
                android:lineSpacingExtra="0dp"
                android:lineSpacingMultiplier="1"
                android:textColor="#FFFFFF"
                android:textScaleX="1" />


                <TextView
                    android:id="@+id/tooltip1"
                    android:text="갤러리"
                    android:visibility="gone"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@id/fab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="75dp"
                    android:layout_marginBottom="206dp">
                </TextView>

            <TextView
                android:id="@+id/tooltip2"
                android:text="업로드"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:visibility="gone"
                android:layout_marginRight="75dp"
                android:layout_marginBottom="147dp">
            </TextView>
            <TextView
                android:text="신고"
                android:id="@+id/tooltip3"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:layout_toRightOf="@id/fab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="75dp"
                android:layout_marginBottom="90dp">
            </TextView>
            <TextView
                android:visibility="gone"
                android:text="공유하기"
                android:id="@+id/tooltip4"
                android:textColor="#ffffff"
                android:layout_toRightOf="@id/fab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="75dp"
                android:layout_marginBottom="267dp">
            </TextView>
            <com.github.edsergeev.TextFloatingActionButton
                android:id="@+id/fab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="250dp"
                android:backgroundTint="@color/fbutton_color_clouds"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:src="@drawable/fragment3selectvideo"
                android:textSize="15dp"
                android:visibility="invisible"
                app:backgroundTint="@color/fbutton_color_clouds"
                app:borderWidth="0dp"
                app:fabCustomSize="55dp"
                app:text_y_offset="5dp" />


            <com.github.edsergeev.TextFloatingActionButton
                android:id="@+id/fab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="190dp"
                android:backgroundTint="@color/fbutton_color_clouds"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:src="@drawable/fragment3selectvideo"
                android:textColor="#000000"
                android:textSize="15dp"
                android:visibility="invisible"
                app:backgroundTint="@color/fbutton_color_clouds"
                app:borderWidth="0dp"
                app:fabCustomSize="55dp"
                app:text_y_offset="5dp" />

            <com.github.edsergeev.TextFloatingActionButton
                android:id="@+id/fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="10dp"
                android:src="@drawable/fragment3uploadvideo"
                android:layout_marginBottom="130dp"
                android:backgroundTint="@color/fbutton_color_clouds"
                android:fontFamily="@font/ibmplexsanskrsemibold"

                android:textColor="#000000"
                android:textSize="15dp"
                android:visibility="invisible"
                app:backgroundTint="@color/fbutton_color_clouds"
                app:borderWidth="0dp"
                app:fabCustomSize="55dp"
                app:text_y_offset="5dp" />

            <com.github.edsergeev.TextFloatingActionButton
                android:id="@+id/fab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="70dp"
                android:backgroundTint="@color/fbutton_color_clouds"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:src="@drawable/notwaring"
                android:textColor="#000000"
                android:textSize="15dp"
                android:visibility="invisible"
                app:backgroundTint="@color/fbutton_color_clouds"
                app:borderWidth="0dp"
                app:fabCustomSize="55dp"
                app:text_y_offset="5dp" />

            <com.github.edsergeev.TextFloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/fbutton_color_clouds"
                android:src="@drawable/add"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="@color/fbutton_color_clouds"
                app:borderWidth="0dp"
                app:fabCustomSize="45dp"
                app:text_y_offset="5dp" />


        </com.google.android.exoplayer2.ui.PlayerView>

    </RelativeLayout>
</LinearLayout>