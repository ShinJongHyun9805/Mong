<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".InsertAddressActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:text="주소지 등록"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/Tx_InsertAddressSave"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:gravity="center|right"
                android:text="완료"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibmplexsanskrsemibold"
            android:gravity="left"
            android:text="주변 유저 기능을 사용하기위해 필수로 등록하셔야 합니다.\n주변 유저들과 정보 공유 및 산책, 소통을 해보세요." />

        <LinearLayout
            android:id="@+id/addressSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editInputD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:textSize="20dp"
                app:endIconMode="clear_text"
                app:errorEnabled="true" />

            <EditText
                android:id="@+id/editInputE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:textSize="20dp"
                app:endIconMode="clear_text"
                app:errorEnabled="true" />

            <EditText
                android:id="@+id/editInputF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:textSize="20dp"
                app:endIconMode="clear_text"
                app:errorEnabled="true" />
        </LinearLayout>

        <WebView
            android:id="@+id/daum_webview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            tools:ignore="WebViewLayout" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="vertical">

        <com.puppyland.mongnang.widget.FButton
            android:id="@+id/fbtn_insertaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/ibmplexsanskrsemibold"
            android:text="주소 등록"
            android:textColor="#FFFFFF"
            fbutton:cornerRadius="10dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="3dp" />
    </LinearLayout>

</LinearLayout>