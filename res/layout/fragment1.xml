<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="13dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ibmplexsanskrsemibold"
            android:gravity="center"
            android:text="몽냥 PICK"
            android:textColor="#1C1C1C"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:id="@+id/divide4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#D8D8D8" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/dataChipLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/defaultChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/ibmplexsanskrsemibold"
                app:chipSpacingHorizontal="12dp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/defaultChip1"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsanskrsemibold"
                    android:text="미용"
                    app:chipBackgroundColor="@color/color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/defaultChip2"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsanskrsemibold"
                    android:text="수제간식"
                    app:chipBackgroundColor="@color/color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/defaultChip3"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsanskrsemibold"
                    android:text="용품"
                    app:chipBackgroundColor="@color/color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/defaultChip4"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsanskrsemibold"
                    android:text="의류"
                    app:chipBackgroundColor="@color/color" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/defaultChip5"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsanskrsemibold"
                    android:text="장묘"
                    app:chipBackgroundColor="@color/color" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/defaultChip6"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsanskrsemibold"
                    android:text="초상화"
                    app:chipBackgroundColor="@color/color" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/defaultChip7"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsanskrsemibold"
                    android:text="클래스"
                    app:chipBackgroundColor="@color/color" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/defaultChip8"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsanskrsemibold"
                    android:text="택시"
                    app:chipBackgroundColor="@color/color" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/defaultChip9"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsanskrsemibold"
                    android:text="훈련"
                    app:chipBackgroundColor="@color/color" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/defaultChip10"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsanskrsemibold"
                    android:text="호텔"
                    app:chipBackgroundColor="@color/color" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/divide2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#D8D8D8" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/PickrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" />
</LinearLayout>