<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="16dp"
    android:paddingRight="12dp">

    <TextView
        android:id="@+id/textviewLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:fontFamily="@font/ibmplexsanskrsemibold"
        android:text="!!필독!!"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/Tx_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#403F3F"
        android:fontFamily="@font/ibmplexsanskrsemibold"
        android:layout_below="@+id/textviewLogo"
        android:text="저희 몽냥몽냥의 기능 중\n주변유저 검색과 채팅을 이용하시기 위해서는\n내 프로필의 모든 정보와 강아지 정보를 등록하셔야합니다.\n프로필 등록 부탁드려요 ^.^"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/Tx_chat"
        android:weightSum="2">

        <TextView
            android:id="@+id/Tx_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/ibmplexsanskrsemibold"
            android:gravity="center"
            android:text="닫기"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Tx_OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/ibmplexsanskrsemibold"
            android:gravity="center"
            android:text="확인"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>