<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TermsActivity">


    <ScrollView
        android:id="@+id/rootScroll"
        android:layout_weight="8"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="몽냥몽냥 회원 이용약관"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <ScrollView
                android:id="@+id/scroll1"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <TextView
                    android:id="@+id/policy1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
            </ScrollView>
            <CheckBox
                android:id="@+id/check1"
                android:text="약관에 동의합니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </CheckBox>

            <TextView
                android:text="전자상거래 소비자보호 법률"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <ScrollView
                android:id="@+id/scroll2"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <TextView
                    android:id="@+id/policy2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
            </ScrollView>
            <CheckBox
                android:id="@+id/check2"
                android:text="약관에 동의합니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </CheckBox>


            <TextView
                android:text="온라인 디지털콘텐츠산업 법률"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <ScrollView
                android:id="@+id/scroll3"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <TextView
                    android:id="@+id/policy3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
            </ScrollView>
            <CheckBox
                android:id="@+id/check3"
                android:text="약관에 동의합니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </CheckBox>



            <TextView
                android:text="약관의 규제에 관한 법률"
                android:fontFamily="@font/ibmplexsanskrsemibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <ScrollView
                android:id="@+id/scroll4"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <TextView
                    android:id="@+id/policy4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
            </ScrollView>
            <CheckBox
                android:id="@+id/check4"
                android:text="약관에 동의합니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </CheckBox>

            <CheckBox
                android:id="@+id/check5"
                android:text="만 14세 이상입니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </CheckBox>

            <CheckBox
                android:id="@+id/check6"
                android:text="모든 약관에 동의합니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </CheckBox>
        </LinearLayout>
    </ScrollView>

    <com.puppyland.mongnang.widget.FButton
        android:id="@+id/nextbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/ibmplexsanskrsemibold"
        android:text="다음"
        android:textColor="#FFFFFF"
        fbutton:buttonColor="#FAFAD2"
        fbutton:cornerRadius="10dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="3dp" />

</LinearLayout>